---
// src/components/LocationSidebar.astro
const { blog } = Astro.props;
---

<div class="bg-slate-900/50 backdrop-blur-md rounded-[32px] p-6 shadow-2xl border border-slate-700 flex flex-col gap-6 w-full sticky top-24">
  
  <div class="relative w-full aspect-square rounded-2xl bg-slate-800 overflow-hidden border border-slate-700">
    <img 
      src="/images/map-placeholder.jpg" 
      alt="Map location" 
      class="w-full h-full object-cover opacity-40 grayscale"
    />
    <div class="absolute inset-0 flex flex-col items-center justify-center">
      <div class="w-8 h-8 bg-emerald-500 rounded-full flex items-center justify-center shadow-[0_0_15px_rgba(16,185,129,0.5)] border-2 border-slate-900">
        <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
      </div>
      <div class="mt-2 bg-slate-800/80 backdrop-blur-sm px-3 py-1 rounded-lg border border-slate-600">
        <p class="text-[10px] font-bold text-emerald-400 uppercase tracking-widest">You are here</p>
      </div>
    </div>
  </div>

  <div class="space-y-2">
    <h3 class="text-lg font-bold text-white font-noto-serif">Location Details</h3>
    <p class="text-sm text-slate-400 leading-relaxed">
      {blog.address || blog.location}
    </p>
  </div>

  <a 
    href={blog.googleMapsUrl || "#"} 
    target="_blank"
    class="flex items-center justify-center gap-2 w-full py-4 bg-emerald-500 hover:bg-emerald-600 text-slate-950 rounded-2xl font-bold text-sm transition-all shadow-lg shadow-emerald-500/20 active:scale-95"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m16 12-4-4-4 4m8 0H8"/></svg>
    Open in Google Maps
  </a>

  <div class="grid grid-cols-2 border-t border-slate-800 pt-6">
    <div class="text-center border-r border-slate-800">
      <p class="text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Distance</p>
      <p class="text-base font-bold text-emerald-400">{blog.distance || "---"}</p>
    </div>
    <div class="text-center">
      <p class="text-[10px] uppercase tracking-widest text-slate-500 font-bold mb-1">Travel Time</p>
      <p class="text-base font-bold text-emerald-400">{blog.travelTime || "---"}</p>
    </div>
  </div>
</div>