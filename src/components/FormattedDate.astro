---
interface Props {
  date: Date;
}

const { date } = Astro.props;

const safeDate =
  date instanceof Date && !isNaN(date.getTime())
    ? date
    : new Date();
---
<time datetime={safeDate.toISOString()}>
  {safeDate.toLocaleDateString("en-us", {
    year: "numeric",
    month: "short",
    day: "numeric"
  })}
</time>
