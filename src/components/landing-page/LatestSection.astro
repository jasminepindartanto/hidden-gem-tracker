---
interface Props {
  title: string;
  accentColor: string;
  description: string;
  viewAllHref: string;
  viewAllText: string;
  viewAllButtonWidth: string;
}

const {
  title,
  accentColor,
  description,
  viewAllHref,
  viewAllText,
  viewAllButtonWidth,
} = Astro.props;
---

<section class="bg-emerald-950/40 py-24 border-t border-emerald-900/40">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 flex items-center justify-between">
      <div>
        <h2 class="mb-4 text-3xl font-bold text-white drop-shadow">
          <span class={`${accentColor} drop-shadow-[0_0_14px_rgba(16,185,129,0.45)]`}>
            {title}
          </span>
        </h2>

        <p class="text-emerald-200/80">{description}</p>
      </div>
      <a
        href={viewAllHref}
        class="inline-flex items-center gap-2 rounded-md border border-slate-600 bg-transparent px-4 py-2 text-sm font-medium text-slate-300 shadow-xs transition-all duration-300 hover:scale-105 hover:bg-slate-800 hover:text-accent-foreground focus-visible:border-ring focus-visible:ring-[3px] focus-visible:ring-ring/50 outline-none"
        style={`min-width: ${viewAllButtonWidth}`}
      >
        {viewAllText}
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>

    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
      <slot />
    </div>
  </div>
</section>
