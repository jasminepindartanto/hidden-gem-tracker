---
// src/components/Header.astro
import { Search } from "lucide-react";
import OptimizedImage from "@/components/OptimizedImage.astro";
import { getNavigationItems, SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";

interface Props {
  user?: {
    display_name: string;
    role: string;
  } | null;
}

const { user } = Astro.props; 
const visibleMenuItems = getNavigationItems();

const initials = user?.display_name
  ? user.display_name.split(" ").map((n: string) => n[0]).join("").toUpperCase()
  : "??";
---

<header class="sticky top-0 z-50 w-full border-b border-teahouse-primary/10 bg-teahouse-bg/95 backdrop-blur shadow-sm">
  <div class="container relative flex h-16 items-center justify-between">
    
    <div class="flex items-center z-20">
      <a href="/" class="flex items-center gap-2">
        <OptimizedImage src="/logo_hidden.png" alt="logo" width={35} height={35} class="h-9 w-9" />
        <span class="font-noto-serif text-xl font-bold text-white tracking-tight hidden sm:block">
          {SITE_TITLE}
        </span>
      </a>
    </div>

    <nav class="hidden md:flex absolute left-1/2 -translate-x-1/2 items-center gap-8 z-10">
      {visibleMenuItems.map((item) => (
        <HeaderLink href={item.href} class="text-sm font-semibold text-slate-300 hover:text-emerald-400 transition-colors tracking-tight">
          {item.label}
        </HeaderLink>
      ))}
    </nav>

    <div class="flex items-center gap-3 z-20">
      {user ? (
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-3 border-r border-white/10 pr-4">
            <div class="text-right hidden sm:block">
              <p class="text-[13px] font-bold text-white leading-tight drop-shadow-sm">{user.display_name}</p>
              <p class="text-[10px] text-emerald-400 uppercase tracking-widest font-black">{user.role}</p>
            </div>
            <div class="w-9 h-9 rounded-full bg-emerald-500 border border-emerald-300 flex items-center justify-center shadow-md">
              <span class="text-xs font-bold text-white">{initials}</span>
            </div>
          </div>

          <a 
            href="/api/auth/logout" 
            title="Keluar"
            class="p-2 text-slate-400 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all group"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>
            </svg>
          </a>
        </div>
      ) : (
        <a href="/auth/login" class="text-xs font-bold text-emerald-400 px-4 py-2 rounded-xl border border-emerald-500/30 hover:bg-emerald-500/10 transition-all">
          Masuk
        </a>
      )}

      <button id="mobile-menu-button" class="md:hidden p-2 text-slate-400 hover:bg-white/5 rounded-md">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const userBtn = document.getElementById("user-menu-button");
    const userDropdown = document.getElementById("user-dropdown");
    const logoutBtn = document.getElementById("logout-button");

    // Toggle Dropdown
    userBtn?.addEventListener("click", (e) => {
      e.stopPropagation();
      userDropdown?.classList.toggle("hidden");
    });

    // Handle Logout (Cara yang lebih aman lewat API)
    logoutBtn?.addEventListener("click", () => {
      // Lebih baik arahkan ke API logout agar cookie dihapus dari sisi server
      window.location.href = "/api/auth/logout";
    });

    // Tutup dropdown jika klik di luar
    document.addEventListener("click", (e) => {
      if (!userBtn?.contains(e.target as Node)) {
        userDropdown?.classList.add("hidden");
      }
    });
  });
  // Fungsi ini berjalan di browser
  window.addEventListener('beforeunload', () => {
    // Mengirim sinyal ke API Logout sebelum tab benar-benar tertutup
    navigator.sendBeacon('/api/auth/logout');
  });
</script>