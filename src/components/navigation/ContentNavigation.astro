---
// src/components/ContentNavigation.astro
interface AdjacentContent {
  previous?: {
    id: number | string;
    dtw: string; // Diubah dari 'title' menjadi 'dtw' sesuai database
  };
  next?: {
    id: number | string;
    dtw: string;
  };
}

interface Props {
  adjacentContent: {
    previous?: any; // Gunakan 'any' atau 'object | null' untuk menghilangkan garis merah cepat
    next?: any;
  };
  contentType: string;
}

const { adjacentContent, contentType } = Astro.props;
const { previous, next } = adjacentContent;

if (!previous && !next) return null;
---

<nav class="mt-12 mb-8 border-t border-slate-800" aria-label="Content Navigation">
  <div class="flex justify-between items-stretch pt-8 gap-4">
    {previous ? (
      <a href={`/${contentType}/${previous.id}`} class="block !no-underline flex-1 max-w-sm">
        <div class="flex items-start justify-start px-5 py-4 text-sm font-medium border rounded-2xl transition-all border-slate-700 text-slate-400 hover:text-emerald-400 hover:border-emerald-500 hover:bg-emerald-500/5 h-full">
          <svg class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <div class="min-w-0">
            <div class="text-[10px] uppercase tracking-widest opacity-50 mb-1 font-bold">Previous</div>
            <div class="font-bold truncate">{previous.dtw}</div>
          </div>
        </div>
      </a>
    ) : <div class="flex-1 max-w-sm" />}

    {next ? (
      <a href={`/${contentType}/${next.id}`} class="block text-right !no-underline flex-1 max-w-sm">
        <div class="flex items-start justify-end px-5 py-4 text-sm font-medium border rounded-2xl transition-all border-slate-700 text-slate-400 hover:text-emerald-400 hover:border-emerald-500 hover:bg-emerald-500/5 h-full">
          <div class="min-w-0">
            <div class="text-[10px] uppercase tracking-widest opacity-50 mb-1 font-bold">Next</div>
            <div class="font-bold truncate">{next.dtw}</div>
          </div>
          <svg class="w-5 h-5 ml-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    ) : <div class="flex-1 max-w-sm" />}
  </div>
</nav>