---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { Toaster } from "../components/ui/sonner";
import { cn } from "@/lib/utils";
import "../styles/global.css";
// TAMBAHKAN baris ini agar koneksi database jalan
import sql from "@/lib/db"; 

const { title, description, className } = Astro.props;

// Tentukan tipe data yang diharapkan dari database
interface UserData {
  display_name: string;
  role: string;
}

const sessionId = Astro.cookies.get("session")?.value;
let currentUser: UserData | null = null;

if (sessionId) {
  // Tambahkan generic type <UserData[]> agar sql tahu apa yang dikembalikan
  const users = await sql<UserData[]>`
    SELECT display_name, role FROM users WHERE id = ${sessionId}
  `;
  currentUser = users[0] || null;
}

const isLoggedIn = Boolean(currentUser);

---

<!doctype html>
<html lang="en" class="mona">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="flex min-h-screen flex-col bg-teahouse-bg text-white">
      <Header user={currentUser} />
      <main class="flex-1">
        <div class={cn(className ? className : "container p-4 md:p-6 mx-auto")}>
          <slot />
        </div>
      </main>
      <Footer />
    </div>
    <Toaster 
      client:load 
      richColors 
      closeButton 
      theme="dark"
      toastOptions={{
        style: { 
          padding: '16px', 
          fontSize: '15px', 
          border: '2px solid #ef4444' // Garis merah tebal untuk error
        },
      }}
    />
  </body>
</html>

<script>
  import { toast } from "sonner";

  // Gunakan fungsi ini agar script menunggu semua library siap
  const showNotification = () => {
    const urlParams = new URLSearchParams(window.location.search);
    const errorType = urlParams.get('error');

    if (errorType === 'unauthorized') {
      toast.error("Akses Ditolak!", {
        description: "Hanya Admin yang boleh masuk ke halaman tersebut.",
        duration: 5000,
      });

      // Bersihkan URL
      window.history.replaceState({}, document.title, window.location.pathname);
    }
  };

  // Jalankan saat halaman selesai dimuat total
  window.addEventListener('load', showNotification);
</script>