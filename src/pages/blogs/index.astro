import BlogCard from "@/components/blog/BlogCard.astro";
import sql from "@/lib/db";
import MainLayout from "../../layouts/MainLayout.astro";

// 1. Ambil parameter dari URL
const currentStartId = Astro.url.searchParams.get("start") || "";
const searchQuery = Astro.url.searchParams.get("q")?.toLowerCase() || "";
const accessFilter = Astro.url.searchParams.get("access") || ""; // Tambahan parameter akses

// 2. Ambil data dari Database dengan Subquery Rating
const destinationsResult = await sql`
  SELECT 
    l.*, 
    (SELECT COALESCE(AVG(u.rating), 0) FROM ulasan u WHERE u.lokasi_id = l.id) as calculated_rating
  FROM lokasi_wisata l
`;
const titikAwal = await sql`SELECT * FROM titik_awal ORDER BY nama_lokasi ASC`;

const selectedPoint = titikAwal.find((p) => p.id.toString() === currentStartId);

// 3. Fungsi Hitung Jarak (Haversine Formula)
function calculateDistance(
  lat1: number,
  lon1: number,
  lat2: number,
  lon2: number,
) {
  const R = 6371;
  const dLat = ((lat2 - lat1) * Math.PI) / 180;
  const dLon = ((lon2 - lon1) * Math.PI) / 180;
  const a =
    Math.sin(dLat / 2) * Math.sin(dLat / 2) +
    Math.cos((lat1 * Math.PI) / 180) *
      Math.cos((lat2 * Math.PI) / 180) *
      Math.sin(dLon / 2) *
      Math.sin(dLon / 2);
  const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
  return R * c;
}

// 4. Logika Filter & Mapping
let allDestinations = destinationsResult
  .filter((item) => {
    // Filter berdasarkan teks (Nama atau Tags)
    const nameMatch = item.dtw.toLowerCase().includes(searchQuery);
    const tagsMatch =
      item.tags && Array.isArray(item.tags)
        ? item.tags.some((tag: string) =>
            tag.toLowerCase().includes(searchQuery),
          )
        : false;

    const textMatch = nameMatch || tagsMatch;

    // PERBAIKAN: Filter berdasarkan kategori akses (Hidden vs Non-Hidden)
    const accessMatch = !accessFilter || item.kategori_akses === accessFilter;

    return textMatch && accessMatch;
  })
  .map((item) => {
    let distance = 0;
    if (selectedPoint) {
      distance = calculateDistance(
        Number(selectedPoint.latitude),
        Number(selectedPoint.longitude),
        Number(item.latitude),
        Number(item.longitude),
      );
    }
    return {
      ...item,
      id: item.id.toString(),
      title: item.dtw,
      distance: distance,
      rating: Number(item.calculated_rating) || 0,
      pubDate: new Date(item.tanggal),
      image: item.url_foto,
      location: item.lokasi,
      description: item.deskripsi_lengkap,
      kategori_akses: item.kategori_akses,
    };
  });

// 5. Urutkan berdasarkan jarak jika lokasi awal dipilih
if (currentStartId) {
  allDestinations.sort((a, b) => a.distance - b.distance);
}

/**
 * Helper untuk membangun URL filter agar tidak merusak parameter pencarian lainnya
 */
const getFilterUrl = (key: string, value: string) => {
  const url = new URL(Astro.url);
  if (value) url.searchParams.set(key, value);
  else url.searchParams.delete(key);
  return url.pathname + url.search;
};
