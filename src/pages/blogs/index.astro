      <form method="GET" class="flex flex-col md:flex-row items-center gap-3 w-full max-w-4xl">
        <div class="relative flex-grow w-full">
          <input 
            type="text" 
            name="q" 
            value={searchQuery}
            placeholder="Cari tempat atau kategori..." 
            class="w-full bg-slate-950/70 border border-slate-700 text-slate-100 px-5 py-4 rounded-2xl 
            focus:border-emerald-400 focus:ring-2 focus:ring-emerald-400/30 
            placeholder:text-slate-500 transition-all"
            />
          <!-- Simpan filter akses saat melakukan search teks -->
          <input type="hidden" name="access" value={accessFilter} />
        </div>

        <select 
          name="start" 
          onchange="this.form.submit()" 
          class="w-full md:w-auto bg-slate-950/70 border border-slate-700 text-slate-100 px-5 py-4 rounded-2xl 
          hover:border-emerald-400 focus:border-emerald-400 focus:ring-2 focus:ring-emerald-400/30 transition-all"
        >
          <option value=""> Hitung Jarak Dari ....</option>
          {titikAwal.map((point) => (
            <option value={point.id} selected={currentStartId === point.id.toString()}>
              üìç {point.nama_lokasi}
            </option>
          ))}
        </select>

        { (searchQuery || currentStartId || accessFilter) && (
          <a href={Astro.url.pathname} class="bg-slate-800 text-slate-400 px-6 py-4 rounded-2xl font-bold hover:text-white transition-all text-sm">
            Reset
          </a>
        )}
      </form>

      <!-- TOMBOL FILTER: Hidden vs Non-Hidden -->
      <div class="flex flex-wrap justify-center gap-3">
        <a 
          href={getFilterUrl('access', '')} 
          class={`px-6 py-2.5 rounded-xl text-xs font-bold uppercase tracking-wider transition-all border ${!accessFilter ? 'bg-emerald-500 text-slate-950 border-emerald-400 shadow-[0_0_20px_rgba(16,185,129,0.25)]' : 'bg-slate-900 text-slate-500 border-slate-800 hover:border-slate-600'}`}
        >
          Semua
        </a>
        <a 
          href={getFilterUrl('access', 'hidden')} 
          class={`px-6 py-2.5 rounded-xl text-xs font-bold uppercase tracking-wider transition-all border ${accessFilter === 'hidden' ? 'bg-cyan-500 text-slate-950 border-cyan-400 shadow-[0_0_20px_rgba(34,211,238,0.25)]' : 'bg-slate-900 text-slate-500 border-slate-800 hover:border-slate-600'}`}
        >
          ‚ú® Hidden Gem
        </a>
        <a 
          href={getFilterUrl('access', 'non-hidden')} 
          class={`px-6 py-2.5 rounded-xl text-xs font-bold uppercase tracking-wider transition-all border ${accessFilter === 'non-hidden' ? 'bg-amber-500 text-slate-950 border-amber-400 shadow-[0_0_20px_rgba(251,191,36,0.25)]' : 'bg-slate-900 text-slate-500 border-slate-800 hover:border-slate-600'}`}
        >
          üî• Populer
        </a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {allDestinations.length > 0 ? (
        allDestinations.map((post) => (
          <div class="flex flex-col h-full group">
             <div class="relative flex-grow bg-slate-900/40 rounded-[32px] border border-slate-800 overflow-hidden transition-all hover:border-emerald-500/50 flex flex-col">
                {currentStartId && (
                  <div class="absolute top-4 left-4 z-20 bg-emerald-500 text-slate-950 px-3 py-1.5 rounded-full text-[10px] font-black tracking-widest shadow-xl animate-pulse">
                    {post.distance.toFixed(1)} KM
                  </div>
                )}
                
                <div class="flex-grow">
                  <BlogCard blog={post} />
                </div>

                <div class="px-6 pb-6 mt-4">
                  <a 
                    href={`/reviews/write?lokasi_id=${post.id}`} 
                    class="w-full py-4 bg-slate-800/50 hover:bg-emerald-500 text-slate-400 hover:text-slate-950 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all flex items-center justify-center gap-2 border border-slate-700 hover:border-emerald-400 group-hover:shadow-[0_0_20px_rgba(16,185,129,0.2)]"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    Write Review
                  </a>
                </div>
             </div>
          </div>
        ))
      ) : (
        <div class="col-span-full text-center py-32 bg-slate-900/20 rounded-[40px] border border-dashed border-slate-800">
          <p class="text-slate-500 text-xl font-medium">Ops! Destinasi tidak ditemukan.</p>
          <p class="text-slate-600 text-sm mt-2">Coba gunakan kata kunci lain atau pilih kategori akses yang berbeda.</p>
        </div>
      )}
    </div>
  </div>
  </div>
</div>

