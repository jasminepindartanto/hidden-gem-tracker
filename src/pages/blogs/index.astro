---
import MainLayout from "../../layouts/MainLayout.astro";
import BlogCard from "@/components/blog/BlogCard.astro";
import sql from "@/lib/db";

// 1. Ambil parameter dari URL
const currentStartId = Astro.url.searchParams.get("start") || "";
const searchQuery = Astro.url.searchParams.get("q")?.toLowerCase() || "";

// 2. Ambil data dari Database
const destinationsResult = await sql`SELECT * FROM lokasi_wisata`;
const titikAwal = await sql`SELECT * FROM titik_awal ORDER BY nama_lokasi ASC`;

const selectedPoint = titikAwal.find(p => p.id.toString() === currentStartId);

// 3. Fungsi Hitung Jarak (Haversine Formula)
function calculateDistance(lat1: number, lon1: number, lat2: number, lon2: number) {
  const R = 6371; 
  const dLat = (lat2 - lat1) * Math.PI / 180;
  const dLon = (lon2 - lon1) * Math.PI / 180;
  const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
            Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * Math.sin(dLon/2) * Math.sin(dLon/2);
  const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
  return R * c;
}

// 4. Logika Filter & Mapping (DIBENERIN DISINI)
let allDestinations = destinationsResult
  .filter((item) => {
    const nameMatch = item.dtw.toLowerCase().includes(searchQuery);
    
    // PERBAIKAN: Logika pencarian dalam Array Tags (Penting untuk klik tag agar jalan)
    const tagsMatch = item.tags && Array.isArray(item.tags) 
      ? item.tags.some((tag: string) => tag.toLowerCase().includes(searchQuery))
      : false;

    return nameMatch || tagsMatch;
  })
  .map((item) => {
    let distance = 0;
    if (selectedPoint) {
      distance = calculateDistance(
        Number(selectedPoint.latitude), 
        Number(selectedPoint.longitude), 
        Number(item.latitude), 
        Number(item.longitude)
      );
    }
    return {
      ...item,
      id: item.id.toString(),
      title: item.dtw, // Mapping dtw ke title untuk BlogCard
      distance: distance,
      rating: Number(item.rating) || 0, 
      pubDate: new Date(item.tanggal),
      image: item.url_foto, // Pastikan url_foto masuk ke image
      location: item.lokasi,
      description: item.deskripsi_lengkap,
      // Pastikan kategori_akses dikirim agar efek berkilau muncul
      kategori_akses: item.kategori_akses 
    };
  });

// 5. Urutkan berdasarkan jarak jika lokasi awal dipilih
if (currentStartId) {
  allDestinations.sort((a, b) => a.distance - b.distance);
}
---

<MainLayout title="Destinasi Wisata" description="Cari hidden gem di Bandung">
  <div class="container mx-auto px-4 py-8">
    
    <div class="mb-12 flex flex-col md:flex-row items-center justify-center gap-4">
      <form method="GET" class="flex flex-col md:flex-row items-center gap-3 w-full max-w-4xl">
        
        <div class="relative flex-grow w-full">
          <input 
            type="text" 
            name="q" 
            value={searchQuery}
            placeholder="Cari tempat atau kategori (misal: Nature)..." 
            class="w-full bg-slate-900 border border-slate-700 text-white px-5 py-4 rounded-2xl outline-none focus:border-emerald-500 transition-all shadow-2xl"
          />
        </div>

        <select 
          name="start" 
          onchange="this.form.submit()" 
          class="w-full md:w-auto bg-slate-900 border border-slate-700 text-white px-5 py-4 rounded-2xl outline-none focus:border-emerald-500 cursor-pointer transition-all"
        >
          <option value="">-- Hitung Jarak Dari --</option>
          {titikAwal.map((point) => (
            <option value={point.id} selected={currentStartId === point.id.toString()}>
              üìç {point.nama_lokasi}
            </option>
          ))}
        </select>

        { (searchQuery || currentStartId) && (
          <a href={Astro.url.pathname} class="bg-slate-800 text-slate-400 px-6 py-4 rounded-2xl font-bold hover:text-white transition-all text-sm">
            Reset
          </a>
        )}
      </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {allDestinations.length > 0 ? (
        allDestinations.map((post) => (
          <div class="flex flex-col h-full group">
             <div class="relative flex-grow bg-slate-900/40 rounded-[32px] border border-slate-800 overflow-hidden transition-all hover:border-emerald-500/50 flex flex-col">
                
                {currentStartId && (
                  <div class="absolute top-4 left-4 z-20 bg-emerald-500 text-slate-950 px-3 py-1.5 rounded-full text-[10px] font-black tracking-widest shadow-xl animate-pulse">
                    {post.distance.toFixed(1)} KM
                  </div>
                )}
                
                <div class="flex-grow">
                  <BlogCard blog={post} />
                </div>

                <div class="px-6 pb-6 mt-4">
                  <a 
                    href={`/reviews/write?lokasi_id=${post.id}`} 
                    class="w-full py-4 bg-slate-800/50 hover:bg-emerald-500 text-slate-400 hover:text-slate-950 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all flex items-center justify-center gap-2 border border-slate-700 hover:border-emerald-400 group-hover:shadow-[0_0_20px_rgba(16,185,129,0.2)]"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    Write Review
                  </a>
                </div>
             </div>
          </div>
        ))
      ) : (
        <div class="col-span-full text-center py-32 bg-slate-900/20 rounded-[40px] border border-dashed border-slate-800">
          <p class="text-slate-500 text-xl font-medium">Ops! Destinasi tidak ditemukan.</p>
          <p class="text-slate-600 text-sm mt-2">Coba gunakan kata kunci lain atau reset filter.</p>
        </div>
      )}
    </div>
  </div>
</MainLayout>