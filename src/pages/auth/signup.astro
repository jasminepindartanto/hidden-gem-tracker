---
import { ArrowRight, Lock, Mail, User } from "lucide-react";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout title="Sign Up | Hidden Bandung" description="Buat akun untuk menjelajahi Bandung">
  <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center 
              bg-gradient-to-br from-[#e8e1d6] via-[#e6d6d6] to-[#d9e4dc] px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-slate-800 tracking-tight mb-2 font-noto-serif">
          Create Account
        </h1>
        <p class="text-slate-600">Join the community of Bandung explorers</p>

      </div>

     <div class="bg-white/70 border border-white/40 p-8 rounded-[32px] 
                  backdrop-blur-xl shadow-[0_20px_60px_rgba(0,0,0,0.18)]">
        <form method="POST" action="/api/auth" class="space-y-5">
          <input type="hidden" name="mode" value="signup" />

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700 ml-1">Display Name</label>
            <div class="relative">
              <User className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="displayName" 
                required 
                placeholder="Your full name" 
                class="w-full bg-white/90 border border-slate-300 rounded-2xl pl-12 pr-5 py-4
                        text-slate-800 outline-none
                        focus:border-emerald-400 focus:ring-2 focus:ring-emerald-200
                        placeholder:text-slate-400 transition-all"

              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700 ml-1">Email Address</label>
            <div class="relative">
              <Mail className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="email" 
                type="email" 
                required 
                placeholder="name@example.com" 
                class="w-full bg-white/90 border border-slate-300 rounded-2xl pl-12 pr-5 py-4
                      text-slate-800 outline-none
                      focus:border-emerald-400 focus:ring-2 focus:ring-emerald-200
                      placeholder:text-slate-400 transition-all"

              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700 ml-1">Password</label>
            <div class="relative">
              <Lock className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="password" 
                type="password" 
                required 
                minlength="6" 
                placeholder="••••••••" 
                class="w-full bg-white/90 border border-slate-300 rounded-2xl pl-12 pr-5 py-4
                        text-slate-800 outline-none
                        focus:border-emerald-400 focus:ring-2 focus:ring-emerald-200
                        placeholder:text-slate-400 transition-all"

              />
            </div>
          </div>

          <button 
            type="submit" 
           class="w-full py-4 rounded-2xl font-bold text-lg transition-all 
                  bg-gradient-to-r from-emerald-500 to-emerald-400
                  hover:from-emerald-600 hover:to-emerald-500
                  text-white shadow-[0_10px_30px_rgba(16,185,129,0.35)]
                  active:scale-[0.98] flex items-center justify-center gap-2 tracking-tight"

          >
            Create Account
            <ArrowRight className="h-5 w-5" />
          </button>
        </form>

        <p class="mt-8 text-center text-sm text-slate-500">
          Sudah punya akun? 
          <a href="/auth/login" class="text-emerald-500 font-bold hover:underline ml-1 tracking-tight">Login di sini</a>
        </p>
      </div>
    </div>
  </div>
</MainLayout>