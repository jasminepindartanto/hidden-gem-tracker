---
import MainLayout from "@/layouts/MainLayout.astro";
import { User, Mail, Lock, ArrowRight } from "lucide-react";
---

<MainLayout title="Sign Up | Hidden Bandung" description="Buat akun untuk menjelajahi Bandung">
  <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center bg-slate-950 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-white tracking-tight mb-2">Create Account</h1>
        <p class="text-slate-400">Join the community of Bandung explorers</p>
      </div>

      <div class="bg-slate-900/50 border border-slate-800 p-8 rounded-[32px] backdrop-blur-md shadow-2xl">
        <form method="POST" action="/api/auth" class="space-y-5">
          <input type="hidden" name="mode" value="signup" />

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-300 ml-1">Display Name</label>
            <div class="relative">
              <User className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="displayName" 
                required 
                placeholder="Your full name" 
                class="w-full bg-slate-800/50 border border-slate-700 rounded-2xl pl-12 pr-5 py-4 text-white outline-none focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 transition-all"
              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-300 ml-1">Email Address</label>
            <div class="relative">
              <Mail className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="email" 
                type="email" 
                required 
                placeholder="name@example.com" 
                class="w-full bg-slate-800/50 border border-slate-700 rounded-2xl pl-12 pr-5 py-4 text-white outline-none focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 transition-all"
              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-300 ml-1">Password</label>
            <div class="relative">
              <Lock className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="password" 
                type="password" 
                required 
                minlength="6" 
                placeholder="••••••••" 
                class="w-full bg-slate-800/50 border border-slate-700 rounded-2xl pl-12 pr-5 py-4 text-white outline-none focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 transition-all"
              />
            </div>
          </div>

          <button 
            type="submit" 
            class="w-full py-4 bg-emerald-500 hover:bg-emerald-400 text-slate-950 rounded-2xl font-bold text-lg transition-all shadow-lg shadow-emerald-500/10 active:scale-[0.98] flex items-center justify-center gap-2 tracking-tight"
          >
            Create Account
            <ArrowRight className="h-5 w-5" />
          </button>
        </form>

        <p class="mt-8 text-center text-sm text-slate-500">
          Sudah punya akun? 
          <a href="/auth/login" class="text-emerald-500 font-bold hover:underline ml-1 tracking-tight">Login di sini</a>
        </p>
      </div>
    </div>
  </div>
</MainLayout>