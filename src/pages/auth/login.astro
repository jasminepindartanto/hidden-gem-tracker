---
import { Lock, LogIn, Mail } from "lucide-react";
import MainLayout from "@/layouts/MainLayout.astro";

const error = Astro.url.searchParams.get("error");
const message = Astro.url.searchParams.get("message");
---

<MainLayout title="Login | Hidden Bandung" description="Masuk ke akun Anda">
<div class="min-h-[calc(100vh-4rem)] flex items-center justify-center 
            bg-gradient-to-br from-[#e8e1d6] via-[#e6d6d6] to-[#d9e4dc] px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-slate-800 tracking-tight mb-2 font-noto-serif">
          Welcome Back
        </h1>
        <p class="text-slate-600">Sign in to continue your adventure</p>

      </div>

      {error === "unauthorized" && (
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500/20 rounded-2xl flex items-center gap-3">
          <div class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></div>
          <p class="text-sm text-red-400 font-medium">{message}</p>
        </div>
      )}

  <div class="bg-white/70 border border-white/40 p-8 rounded-[32px] backdrop-blur-xl shadow-[0_20px_60px_rgba(0,0,0,0.18)]">
        <form method="POST" action="/api/auth" class="space-y-5">
          <input type="hidden" name="mode" value="signin" />

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700 ml-1">Email Address</label>
            <div class="relative">
              <Mail className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="email" 
                type="email" 
                required 
                placeholder="name@example.com" 
               class="w-full bg-white/90 border border-slate-300 rounded-2xl pl-12 pr-5 py-4 
                      text-slate-800 outline-none
                      focus:border-emerald-400 focus:ring-2 focus:ring-emerald-200
                      placeholder:text-slate-400 transition-all"

              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-semibold text-slate-700 ml-1">Password</label>
            <div class="relative">
              <Lock className="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
              <input 
                name="password" 
                type="password" 
                required 
                placeholder="••••••••" 
                class="w-full bg-white/90 border border-slate-300 rounded-2xl pl-12 pr-5 py-4 
                        text-slate-800 outline-none
                        focus:border-emerald-400 focus:ring-2 focus:ring-emerald-200
                        placeholder:text-slate-400 transition-all"

              />
            </div>
          </div>

          <button 
            type="submit" 
            class="w-full py-4 bg-emerald-500 hover:bg-emerald-400 text-slate-950 rounded-2xl font-bold text-lg transition-all shadow-lg active:scale-[0.98] flex items-center justify-center gap-2 tracking-tight"
          >
            Sign In
            <LogIn className="h-5 w-5" />
          </button>
        </form>

        <p class="mt-8 text-center text-sm text-slate-500">
          Belum punya akun? 
          <a href="/auth/signup" class="text-emerald-500 font-bold hover:underline ml-1 tracking-tight">Daftar sekarang</a>
        </p>
      </div>
    </div>
  </div>
</MainLayout>