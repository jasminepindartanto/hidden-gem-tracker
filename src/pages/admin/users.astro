---
// src/pages/admin/users.astro
import AdminLayout from "@/layouts/AdminLayout.astro";
import { UserTable } from "@/components/admin/UserTable";
---

<AdminLayout 
  title="Manage Users" 
  description="Halaman untuk mengelola akses dan data pengguna Hidden Bandung"
>
  <main class="max-w-7xl mx-auto px-4 md:px-8 py-10">
    <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4">
      <div>
        <h1 class="text-3xl font-bold text-slate-900 font-noto-serif">Manage Users</h1>
        <p class="text-slate-500 mt-1">Oversee and manage registered community members and their activities.</p>
      </div>
      
      {/* Pastikan href mengarah ke /admin/users/add sesuai struktur folder */}
      <a 
        href="/admin/users/add" 
        class="bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-3 rounded-2xl font-bold flex items-center gap-2 transition-all shadow-lg shadow-emerald-500/20 active:scale-95"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><line x1="19" y1="8" x2="19" y2="14"/><line x1="22" y1="11" x2="16" y2="11"/></svg>
        Add New User
      </a>
    </header>

    <UserTable client:load />
  </main>
</AdminLayout>