---
// src/pages/admin/users/add.astro
import AdminLayout from "@/layouts/AdminLayout.astro";
import { UserForm } from "@/components/admin/UserForm";
---

<AdminLayout 
  title="Add New User" 
  description="Halaman pendaftaran akun baru untuk tim pengelola Hidden Bandung"
>
  <main class="max-w-4xl mx-auto px-4 py-16">
    <header class="text-center mb-10">
      <h1 class="text-4xl font-bold text-slate-900 font-noto-serif">Add New User</h1>
      <p class="text-slate-500 mt-2">Create a new account for contributors or administrators.</p>
    </header>

    <div class="bg-white p-8 md:p-12 rounded-[40px] border border-slate-100 shadow-xl shadow-slate-200/50">
      <UserForm client:load />
    </div>
  </main>
</AdminLayout>